<div class="container">
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <%= form_with(model: item) do |form| %>
        <% if @item.errors.any? %>
          <div style="color: blue">
            <div class="error_messages">
              <h2>Errors:</h2>
              <ul>
                <% @item.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
            </ul>
          </div>
        <% end %>
        <br>
        <div class="form-group">
          <%= form.label :Photo %>
            <%= form.file_field :image_url, class: "form-control", accept: 'image/*' %>
                <%= form.hidden_field :image_url_cache %>
        </div>
        <br>
        <div class="form-group">
          <%= form.label :タイトル, style: "display: block" %>
          <%= form.text_field :name %>
        </div>
        <br>
        <div class="form-group">
          <%= form.label :info, style: "display: block" %>
          <%= form.text_area :description, style: "width: 400px; height: 200px;" %>
        </div>
        <br>
        <div class="form-group">
          <%= form.label :保管場所, style: "display: block" %>
          <%= form.text_field :storage %>
        </div>
        <br>
        <div class="form-group">
          <p>タグをカンマで区切って入力してください！</p>
          <%= form.label :タグ, style: "display: block" %>
          <%= form.text_field :tag_list, value: item.tags.pluck(:name).join(', ') %>
        </div>
        <br>
        <div class="form-group">
          <%= form.submit %>
        </div>
      <% end %>
    </div>
  </div>
</div>